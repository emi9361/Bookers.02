
<div>User info</div>

  <%= form for(@user) do |f| %>
    <label>Name</label>
      <%= f.text_field :name, autofocus: true %>
      <%= f.text_area :introduction, autofocus: true %>
      <%= attachment_image_tag @user, :book, :fill, 100, 100, fallback:"no-image.jpg" %>

    <label>ProfileImage</label>
       <%= f.attachment_field :book_image%>
   <%= f.submit "Update User"%>
<% end %>