
<div class ="body">
	<div class ="container">
    <p id ='notice'></p>
    <h2>User info</h2>
      <%= form_for (@user) do |f| %>

      <% if @user.errors.any? %>
      <div id = "error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul><% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
      <% end %>

      <div class = "field">
        <label for = "user_name">Name</label>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class = "field">
        <label for = "user_image">Image</label>
        <%= f.attachment_field :profile_image %>
      </div>
      <br>
      <div class = "field">
        <label for = "user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true %>
      </div>
        <%= f.submit "Update User" %>
    <% end %>
  </div>
</div>
