
<div class ="body">
	<div class ="container">
</div>
    <p id ='notice'></p>
  <h2>User info</h2>
  <%= form_for (@user) do |f| %>

<div class = "field">
    <label for = "user_name">Name</label>
    <%= f.text_field :name, autofocus: true %>
</div>

<div class = "field">
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback:"" %>
<label for = "user_image">Image</label>
</div>

<div class = "field">
<label for = "user_introduction">Introduction</label>
<%= f.attachment_field :profile_image %>
</div>

<div class = "actions">
  <% if @user.id == current_user.id %>
  <%= f.submit "Update User", user_path(@user.id) %>
</div>
</form>
</div>
<% end %>

<% end %>