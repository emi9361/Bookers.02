<div class = "body">
  <div class = "container">
    <div class = "row">
       <% if @book.errors.any? %>
    <div id = "error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul><% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
    </div>
      <div class = "col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill,40,40, fallback:"noimage.png",size:"100x100" %>
        <table class = "table">
          <tbody>
          <tr>
            <td>name</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
          </tr>
          </tbody>
        </table>

    <div class = "row">
      <% if @user.id == current_user.id %>
      <%= link_to "", edit_user_path(@user), class:'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
      <% end %>
    </div>

    <h2>New book</h2>
      <%= form_for (@book) do |f| %>
      <div class ="field row">
      <label for ="book_title">Title</label>
      <%= f.text_field :title, autofocus: true, class:"form-control" %>
      </div>

      <div class = "field row">
      <label for="book_opiniion">Opinion</label>
      <%= f.text_area :body, autofocus: true, class:"col-xs-12 book_body" %>
      </div>
      <br>
      <div class = "actions row">
      <%= f.submit 'Create Book', class:"btn btn-danger col-xs-12"  %>
      </div>
     <% end %>
     </div>

     <div class ="col-xs-9">
      <h2>Books</h2>
      <table class ="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <tbody>
          <% @books.each do |book |%>
        <tr>
          <td><%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback:"noimage.png", size:'20x20' %>
              <% end %>
            </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>

          <% end %>
        </tbody>
      </table>
    </div>
    </div>
    </div>
   </div>
 </div>

