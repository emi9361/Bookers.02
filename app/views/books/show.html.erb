<h1>一覧ページ</h1>
<p>signed in successully</p>

<p>user infoマイページ</p>
<div class ="profile">
	<h3 class ="profile-name"><%= @user.name %></h3>
	<%= image_tag(%= sample-author1.jpg', class: "img-circle pull-left profile-thumb", style: "width: 100px; height: 100px; margin-top: 20px;") %>')%>
</div>
<p>newbook 投稿機能</p>
<%= form_for(@book, url: new_book_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group has-icon">
        <label class="control-label sr-only">Title</label><br>
        <%= f.text_field :title, class:"form-control", placeholder:"title" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
       <label class="control-label sr-only">Body</label><br>
      <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"body" %>
    </div>
  </div>
  <hr>
  <%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
<p>form_for</p>
<p>books一覧</p>
 <%if @book.user == current_user %>
 <%= link_to "削除", book_path(@book), method: :delete %>
 <% end %>



