<div class = "row">
  <div class ="container">
    <p = notice></p>
    <div class ="row">
      <div class = "col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <%= form_for (@book) do |f| %>

        <div class = "field row">
          <label for = "book_title">Title</label>
          <%= f.text_field :title, class:"col-xs-12 book_title" %>
        </div>

        <div class = "field row">
        <label for = "book_body">Opinion</label>
        <%= f.text_area :body, class:"col-xs-12 book_body"%>
        </div>
        <br>

        <div calss = "actions row">
        <%=f.submit"Update Book",class:'col-sx-12 btn btn-danger'%>
        </div>
      <% end %>
           <p><%= link_to "Show", book_path(@book) %></p>
           <p>|</p>
           <p><%= link_to"Back", books_path %></p>
      </div>
    </div>
  </div>
</div>



